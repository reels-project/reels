        "./faces/typings/bundle.d.ts",
        "./faces/typings/c3/c3.d.ts",
        "./faces/typings/d3/d3.d.ts",
        "./faces/typings/jquery/jquery.d.ts",
        "./faces/typings/moment/moment-node.d.ts",
        "./faces/typings/moment/moment.d.ts",
        "./modules/datatable/datatable.ts",
        "./modules/modules.ts",
        "./modules/typings/angularjs/angular-animate.d.ts",
        "./modules/typings/angularjs/angular-cookies.d.ts",
