<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib id="r" xmlns="http://java.sun.com/xml/ns/javaee"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibary_2_0.xsd"
                  version="2.0">
  <namespace>https://github.com/reels-project/reels/faces</namespace>
  
  <!-- Converters -->
  <tag>
    <tag-name>convertOptionalString</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.OptionalStringConverter</converter-id>
    </converter>
  </tag>
  
  <tag>
    <tag-name>convertBigDecimal</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.BigDecimalConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertBigInteger</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.BigIntegerConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertBoolean</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.BooleanConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertByte</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.ByteConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertCharacter</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.CharacterConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertDouble</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.DoubleConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
    <attribute>
      <name>primitive</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertEnum</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.EnumConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertFloat</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.FloatConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertInteger</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.IntegerConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
    <attribute>
      <name>primitive</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertLong</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.LongConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
    <attribute>
      <name>primitive</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertShort</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.ShortConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertDate</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.DateConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
    <attribute>
      <name>format</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertTime</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.TimeConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
    <attribute>
      <name>format</name>
    </attribute>
  </tag>
  <tag>
    <tag-name>convertDateTime</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.convert.DateTimeConverter</converter-id>
    </converter>
    <attribute>
      <name>optional</name>
    </attribute>
    <attribute>
      <name>format</name>
    </attribute>
  </tag>
  
  <composite-library-name>compo</composite-library-name>
  <!-- component -->
  <composite-library-name>component</composite-library-name>
  
  <!-- angularJs contianer (compiler) -->
  <tag>
    <tag-name>ngContainer</tag-name>
    <component>
        <component-type>com.github.reels_project.reels.faces.component.NgContainer</component-type>
    </component>
  </tag>
  
  <!-- datatable -->
  <tag>
    <tag-name>dataTable</tag-name>
    <source>./resources/angular/datatable/datatable.xhtml</source>
    <!-- <attribute>
      <name>model</name>
      <type>com.github.reels_project.reels.faces.model.datatable.DatatableModel</type>
    </attribute> -->
  </tag>
  <tag>
    <tag-name>thead</tag-name>
    <source>./resources/angular/datatable/thead.xhtml</source>
  </tag>
  <tag>
    <tag-name>tbody</tag-name>
    <source>./resources/angular/datatable/tbody.xhtml</source>
  </tag>
  <tag>
    <tag-name>tr</tag-name>
    <source>./resources/angular/datatable/tr.xhtml</source>
  </tag>
  <tag>
    <tag-name>th</tag-name>
    <source>./resources/angular/datatable/th.xhtml</source>
  </tag>
  <tag>
    <tag-name>td</tag-name>
    <source>./resources/angular/datatable/td.xhtml</source>
  </tag>
  
  <!-- chart -->
  <tag>
    <tag-name>chart</tag-name>
    <source>./resources/angular/chart/chart.xhtml</source>
  </tag>
  
  <!-- gantt -->
  <tag>
    <tag-name>gantt</tag-name>
    <source>./resources/angular/gantt/gantt-chart.xhtml</source>
  </tag>
  
  <!-- CmpornentModel Converters -->
  <tag>
    <tag-name>convertDatatableModel</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.model.datatable.DatatableModelConverter</converter-id>
    </converter>
  </tag>
  
  <tag>
    <tag-name>convertGanttModel</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.model.gantt.GanttModelConverter</converter-id>
    </converter>
  </tag>
  
  <tag>
    <tag-name>convertChartModel</tag-name>
    <converter>
      <converter-id>com.github.reels_project.reels.faces.model.chart.ChartModelConverter</converter-id>
    </converter>
  </tag>
</facelet-taglib>